{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "es2020",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"]
}